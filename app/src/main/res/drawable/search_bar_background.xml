<!-- res/drawable/search_bar_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the border color and width -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Light gray border -->

    <!-- Set the corner radius for rounded edges -->
    <corners
        android:radius="10dp" />

    <!-- Set the background color of the EditText -->
    <solid
        android:color="#FFFFFF" /> <!-- White background -->

    <!-- Optional: padding inside the EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
